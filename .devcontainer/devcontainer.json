
{
    "name": "${localEnv:PROJECT_A_NAME:my_project_name}",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "args": {
            "ENV_NAME": "${localEnv:PROJECT_A_NAME:my_project_name}",
            "PYTHON_VER": "${localEnv:PYTHON_VER:3.10}",
            "QUARTO_VER": "${localEnv:QUARTO_VER:1.3.450}"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/data_science_nfl_quant/bin/python",
                "python.pythonPath": "/opt/conda/envs/data_science_nfl_quant/bin/python"
            },
            "extensions": [
                "quarto.quarto",
                "purocean.drawio-preview",
                "redhat.vscode-yaml",
                "yzhang.markdown-all-in-one",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "github.vscode-github-actions"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],
    "remoteEnv": {
        "MY_VAR": "${localEnv:MY_VAR:test_var}"
    },
    "runArgs": [
        "--gpus", "all",
        "--env-file", ".devcontainer/devcontainer.env"
    ],
    "postCreateCommand": "bash -c 'eval \"$(/opt/conda/bin/conda shell.bash hook)\" && conda activate data_science_nfl_quant && python /workspace/tests/test1.py'"
}